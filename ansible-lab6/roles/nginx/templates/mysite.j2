#Dynamic Config for server {{ ansible_facts['nodename'] }}

    upstream webservers {
	{% for host in groups['webservers'] %}
        server {{ hostvars[host]['ansible_facts']['nodename'] }}:{{http_port}};
    {% endfor %}

    #server web01:8000;
    #server web02:8000;
    
    }

    server {
        listen 80;
        location / {   
                proxy_pass http://webservers;
        }
    }
